{
  "name": "qa-automation-framework",
  "version": "1.0.0",
  "description": "Framework de automatizaci√≥n QA con Playwright",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:api && npm run test:ui",
    "test:api": "jest --config=jest.config.ts",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "test:ui:parallel": "playwright test -w 4",
    "report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.4",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "typescript": "^5.3.3"
  }
}
